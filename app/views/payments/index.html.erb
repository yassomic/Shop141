<%= amazon_simple_pay_form_tag do %>
  $ <%= text_field_tag 'amount' %><br/><br/>
  <%= hidden_field_tag 'reference_id', 'something' %>
  <%= hidden_field_tag 'description', 'something else' %>
  <%= image_submit_tag('/images/pay_me.gif') %>
<% end %>


<h1>Listing payments</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Transaction</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.amount %></td>
        <td><%= payment.transaction_id %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

